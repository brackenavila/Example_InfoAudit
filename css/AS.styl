:not(a)
	color white
	text-transform capitalize
	transition all 1s ease
img
	border-radius 1em
body
	background black
	height 100%
	overflow-x hidden
	width 100%
	button
		background linear-gradient(darkblue,#00F,darkblue)
		border-radius 60%
		font-size 2em
		outline 0
		position fixed
		right 36.5%
	div
		text-align center
		top 0
	.A
		background darkred
		float left
		width 60%
		img
			height 100%
			width 100%
	.B
		background repeating-linear-gradient(45deg,hsla(0, 100%, 7%, 0.5),hsla(0, 5%, 33%, 0.6) 3%),repeating-linear-gradient(90deg, #613E3E 0%, #3d0101, darkblue, blue, #00008b, #000 4%)
		float right
		font-size 2em
		width 40%
		nav
			border-radius 60%
			background radial-gradient(#add8e6, rgba(169, 169, 169, 0.5), rgba(0, 0, 0, 0.5))
			margin 1em 0 0
::selection
	background orangered
::-webkit-scrollbar
	background linear-gradient(70deg,darkred,red,darkred)
::-webkit-scrollbar-thumb
	border-bottom darkblue groove 5px
	border-top darkblue groove 5px
	border-radius 1em
::-webkit-scrollbar-thumb:active
	background red
	border-bottom #96AEFC groove 5px
	border-top #96AEFC groove 5px
